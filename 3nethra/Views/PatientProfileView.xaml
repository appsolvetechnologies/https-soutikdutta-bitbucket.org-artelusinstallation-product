<UserControl x:Class="Artelus.Views.PatientProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Artelus.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <StackPanel Margin="0 0 0 10">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Profile" Style="{StaticResource Heading1}" Margin="0,0,15,0" />
                </StackPanel>
                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Patient ID:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Grid.Column="1" FontSize="14" FontWeight="SemiBold" Text="{Binding PatientEntity.Id}" />
                </Grid>
                <Grid Margin="0 0 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Name:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Grid.Column="1" FontSize="14" FontWeight="SemiBold" Text="{Binding PatientEntity.Nm}" />
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Age:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.Age}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Phone:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.mob}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Gender:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.Sex}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Email ID:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.Email}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Marital Status:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.MaritalStatus}" />
                </StackPanel>

            </StackPanel>

            <StackPanel Margin="0 10 0 0">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Health Information" Style="{StaticResource Heading1}" Margin="0,0,15,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Hypertension:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.Hypertension}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10" >
                    <TextBlock Text="Diabetic:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity. Diabetic}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Cataract:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.Cataract}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Laser Treatment:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.LaserTreatment}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Allergy to Drugs:" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.AllergyDrugs}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Current Medication" FontWeight="Bold" Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PatientEntity.CurrentMedications}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel>

                <StackPanel>
                    <Button Command="{Binding  ViewReportDataCommand}">View Report</Button>
                </StackPanel>

                <StackPanel>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
